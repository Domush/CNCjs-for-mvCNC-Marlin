.disconnected-info {
    width: 100%;
    height: 100%;
    display: flex;
    flex-grow: 1;
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-evenly;
    gap: 1rem;
    background: #e5e7eb;
}

.idle-info {
    width: 100%;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.idle-info-row {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    width: 100%;
    overflow-wrap: break-word;
    background: #e5e7eb;
    height: 100%;
    border: solid 1px #9ca3af;
}

.additional-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: space-between;
    margin-top: 1rem;
}

.axis-letter {
    font-weight: bold;
    font-size: 1.75rem;
}

.file-name {
    color: #3e85c7;
    font-size: 1.1rem;
    height: 1.9rem;
}

.file-stat {
    display: flex;
    flex-direction: column;
    border-left: solid 3px #d1d5db;
    width: 20%;
    align-items: center;
    flex-grow: 1;
    box-sizing: border-box;

    &:first-child {
        border: none;
    }
}

.file-stat-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    flex-grow: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    min-width: 0;
}

.file-stat-content {
    font-size: .9em;
    font-weight: bold;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    min-width: 0;
    justify-content flex-start

    & > span {
        overflow: hidden;
        text-overflow: ellipsis;
        min-width: 0;
    }
}

.file-stat-label {
    margin-top: .5em;
    color: #6b7280;
    text-align: center;
}

.text-wrap {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    max-width: 20ch;
    display: block;
}
