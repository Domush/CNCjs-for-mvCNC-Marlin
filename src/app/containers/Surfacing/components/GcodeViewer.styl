.wrapper {
    overflow-y: scroll;
    height: 500px;
    background-color: white;
    border: 1px solid #eee;
}

.line {
    display: grid;
    grid-template-columns: 1fr 9fr;
}

.line-number {
    margin: 0 0.75rem;
    color: rgba(0, 0, 0, 0.5);
    text-align: center;
}

.line-code {
    user-select: text;
    border-radius: 0;
    height: 25px;
    padding-left: 0.5rem;
}